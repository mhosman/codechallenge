<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DevCodeChallenge</title>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">

    <!-- FontAwesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
    @model IEnumerable<DevCodeChallenge.Models.PurchaseDto>

    <div class="container">
        <h2>Purchases</h2>

        <button id="filterButton" class="btn btn-primary">Filter greater than 1000</button>

        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Quantity</th>
                        <th>Total Cost</th>
                        <th class="sort-icon">
                            <span>Date</span>
                            <i class="fas fa-sort-down"></i>
                        </th>
                    </tr>
                </thead>
                <tbody id="purchaseTableBody">
                    @foreach (var purchase in Model)
                    {
                        <tr>
                            <td>@purchase.Id</td>
                            <td>@purchase.Quantity</td>
                            <td>@purchase.TotalCost</td>
                            <td>@purchase.Date</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>

    <!-- Custom scripts -->
    <script src="~/Scripts/Views/purchases.js"></script>
</body>
</html>
